#!/bin/bash

readonly CONFIG_FILE=~/.config/alacritty/alacritty.toml
readonly LIGHT_THEME_MATCH='catppuccin-latte'
readonly DARK_THEME_MATCH='catppuccin-macchiato'

declare THEME
THEME="${1}"
readonly THEME

if [ "${THEME}" == 'light' ]; then
	sed -i "s/${DARK_THEME_MATCH}/${LIGHT_THEME_MATCH}/" ${CONFIG_FILE}
elif [ "${THEME}" == 'dark' ]; then
	sed -i "s/${LIGHT_THEME_MATCH}/${DARK_THEME_MATCH}/" ${CONFIG_FILE}
else
	echo "Expecting first argument to be 'light' or 'dark' but got: '${THEME}'" >&2
fi
