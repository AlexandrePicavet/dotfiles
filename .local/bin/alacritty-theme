#!/bin/bash

set -e

readonly CONFIG_FILE=~/.config/alacritty/alacritty.toml
readonly LIGHT_THEME_NAME='catppuccin-latte'
readonly DARK_THEME_NAME='catppuccin-macchiato'

declare THEME
THEME="${1}"
readonly THEME

if [ "${THEME}" == 'light' ]; then
	sed -i "s/${DARK_THEME_NAME}/${LIGHT_THEME_NAME}/" ${CONFIG_FILE}
elif [ "${THEME}" == 'dark' ]; then
	sed -i "s/${LIGHT_THEME_NAME}/${DARK_THEME_NAME}/" ${CONFIG_FILE}
else
	echo "Expecting first argument to be 'light' or 'dark' but got: '${THEME}'" >&2
	exit 1
fi

