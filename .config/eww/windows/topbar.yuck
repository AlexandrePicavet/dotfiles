(include "./widgets/hyprland/hyprland-workspaces.yuck")
(include "./widgets/date.yuck")
(include "./widgets/power-button.yuck")

(defwindow topbar
	:monitor 0
	:stacking "fg"
	:exclusive true
	:focusable false
	:geometry (geometry
		:anchor "top center"
		:x 0
		:y 0
		:width "100%"
	)
	(box
		:class "window_topbar"
		:orientation "horizontal"
		(box
			:halign "start"
			(hyprland-workspaces)
		)
		(box
			:halign "center"
			(date)
		)
		(box
			:halign "end"
			(power-button)
		)
	)
)

