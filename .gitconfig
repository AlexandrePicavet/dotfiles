[core]
	pager = delta

[commit]
	gpgsign = true

[pull]
	rebase = true
[push]
	autoSetupRemote = true

[diff]
	colorMoved = default
	tool = nvimdiff
	guitool = nvimdiff
[difftool]
	prompt = false
	guiDefault = false
[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd L\""
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	light = false
	features = catppuccin-macchiato
	side-by-side = true
	line-numbers = true
	true-colors = always
	hyperlinks = true
	hyperlinks-file-link-format = "file:///{path}"
	tabs = 2

[merge]
	conflictstyle = diff3
	tool = nvimdiff
[mergetool]
	prompt = false
[mergetool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$MERGED\" \"$BASE\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd J\""

[rerere]
	enabled = true

[include]
	path = .config/delta/theme.gitconfig
	path = .user.gitconfig
