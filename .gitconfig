[include]
	path = .config/delta/theme.gitconfig
	path = .user.gitconfig
[core]
	pager = delta
[commit]
	gpgsign = true
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[merge]
	conflictstyle = diff3
	tool = nvimdiff
[mergetool]
	prompt = false
[diff]
	colorMoved = default
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	light = false
	features = catppuccin-macchiato
	side-by-side = true
	line-numbers = true
	true-colors = always
	hyperlinks = true
	hyperlinks-file-link-format = "file:///{path}"
	tabs = 2
